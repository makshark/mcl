<div class="space-50"></div>
<div class="container">
  <div class="raw">
    <div class="cold-md-12">
      <table class="table table-condensed table-bordered table-hover">
        <thead>
        <tr>
          <th>#</th>
          <th>Ник</th>
          <th>Коэффициент</th>
          <th>Количество игр</th>
        </tr>
        </thead>
        <% @result_array.each do |player| %>
            <tbody class="<%= 'player-rating-background' if player[:position] != '' %>">
            <tr>
              <td><%= player[:position] %></td>
              <td><%= player[:nick] %></td>
              <td><%= player[:rating].round %></td>
              <td><%= player[:game_count] %></td>
            <tr>
            </tbody>
        <% end %>
      </table>
    </div>
  </div>
